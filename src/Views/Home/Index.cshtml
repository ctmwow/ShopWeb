@model src.Models.UserModel
@using src.Controllers
@{
    ViewData["Title"] = "ShopWeb";
    string user = onlineList.user;
}

<h1>hello there</h1>

@if (user == null)
{
    <hr />
    using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-inline" }))
    {
        <legend>Login</legend>
        <div class="form-group mb-2">
            <label for="staticEmail2" class="sr-only">username</label>
            <input type="text" readonly class="form-control-plaintext" id="staticEmail2" value="Enter userName">
        </div>
        <div class="form-group mx-sm-3 mb-2">
            @Html.TextBoxFor(u => u.UserName)
            @Html.ValidationMessageFor(u => u.UserName)
        </div>
        <input type="submit" class="btn btn-primary mb-2" value="Confirm identity" />
    }
    <hr />
    using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @class = "" }))
    {
        <legend>Register</legend>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Repeat Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword3" placeholder="Repeat Password">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">Checkbox</div>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck1">
                    <label class="form-check-label" for="gridCheck1">
                        Agree to use C# page
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </div>
    }
}

else
{
    <h4>Welcome @user</h4>
}
