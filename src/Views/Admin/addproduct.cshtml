@model src.Models.ShopModel

@{
    ViewData["Title"] = "ShopWeb";
}


@using (Html.BeginForm("Add", "Admin", FormMethod.Post))
{
    <legend>Add Product</legend>
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Product Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(u => u.Name)
            @Html.ValidationMessageFor(u => u.Name)
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(u => u.Description)
            @Html.ValidationMessageFor(u => u.Description)
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Cost</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(u => u.Price)
            @Html.ValidationMessageFor(u => u.Price)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" class="btn btn-primary" value="Add Product" />
        </div>
    </div>
 }
